{
  "name": "cordova-res-generator",
  "version": "0.6.0",
  "description": "Generates icon & splash screen for cordova/ionic projects using javascript only.",
  "main": "src/index.js",
  "preferGlobal": true,
  "bin": {
    "crgen": "./bin/crgen",
    "cordova-res-generator": "./bin/cordova-res-generator"
  },
  "scripts": {
    "lint": "eslint -f table \"./src/**/*.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "res-gen": "./bin/crgen -p android,pwa",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint -f table \"./src/**/*.js\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sebinbenjamin/cordova-res-generator.git"
  },
  "keywords": [
    "cordova",
    "ionic",
    "pwa",
    "phonegap",
    "icon",
    "splash",
    "splashscreen",
    "generator",
    "cli",
    "tool"
  ],
  "author": {
    "name": "Sebin Benjamin",
    "email": "sebinbenjamin@gmail.com"
  },
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/sebinbenjamin/cordova-res-generator/issues"
  },
  "homepage": "https://github.com/sebinbenjamin/cordova-res-generator",
  "dependencies": {
    "babel-eslint": "^10.0.2",
    "bluebird": "^3.5.5",
    "colors": "^1.3.3",
    "commander": "^2.20.0",
    "fs-extra": "^8.1.0",
    "gauge": "^2.7.4",
    "lodash": "^4.17.13",
    "sharp": "^0.20.8",
    "snyk": "^1.193.3"
  },
  "contributors": [
    {
      "name": "Sebin Benjamin",
      "email": "sebinbenjamin@gmail.com"
    },
    {
      "name": "Olivab",
      "email": "olivabdev@gmail.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.1"
  },
  "snyk": true
}
